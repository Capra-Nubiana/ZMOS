# Database Configuration
# Local development (SQLite)
DATABASE_URL="file:./dev.db"

# Production (PostgreSQL) - Use one of these formats:
# For Cloud SQL: postgresql://user:password@/dbname?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_ID
# For external PostgreSQL: postgresql://user:password@host:5432/dbname

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"

# Server Configuration
PORT=3000
NODE_ENV="development"

# Weather API (Optional - uses mock data if not configured)
WEATHER_API_KEY=""
WEATHER_PROVIDER="mock"  # Options: "mock", "openweather", "weatherapi"

# AI Configuration (Google Gemini)
GOOGLE_AI_API_KEY="your-gemini-api-key"

# CORS (Optional)
CORS_ORIGIN="http://localhost:3000"

# Logging
LOG_LEVEL="debug"  # Options: "debug", "info", "warn", "error"
